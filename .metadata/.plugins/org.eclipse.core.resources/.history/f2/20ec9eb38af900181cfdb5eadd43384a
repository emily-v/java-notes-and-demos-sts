package scope;

public class Warehouse {

	public static void main(String[] args) {
		
		Box a = new Box();
		a.value = 1000;
		
		Box b = new Box();
		b.value = 2000;
		
		a.printValue();
		b.printValue();
		
		// always shared because it is the static value
		a.static_value = 20; // value is always shared in static variables to better to use the below
		Box.static_value = 40000; // better to use this class name for static variables
		
		// these are the same but makes less sense than the below
		a.printStaticValue(); // output = 20
		b.printStaticValue(); // output = 20
		
		// makes more sense than the above
		Box.printStaticValue(); 
		
	}
}
