package com.revature.eval.java.core;

import java.util.Map;

public class Playground {
	
	public static void main(String[] args) {
	
	String test = "therapy school";
	System.out.println(toPigLatin(test));
	
	}
	
	
	
	/**
	 * 8. Implement a program that translates from English to Pig Latin.
	 * 
	 * Pig Latin is a made-up children's language that's intended to be confusing.
	 * It obeys a few simple rules (below), but when it's spoken quickly it's really
	 * difficult for non-children (and non-native speakers) to understand.
	 * 
	 * Rule 1: If a word begins with a vowel sound, add an "ay" sound to the end of
	 * the word. Rule 2: If a word begins with a consonant sound, move it to the end
	 * of the word, and then add an "ay" sound to the end of the word. There are a
	 * few more rules for edge cases, and there are regional variants too.
	 * 
	 * See http://en.wikipedia.org/wiki/Pig_latin for more details.
	 * 
	 * @param string
	 * @return
	 */
	public static String toPigLatin(String string) {
		String[] words = string.split(" "); // convert phrase to array of strings
		String result = "";
		for (int w=0; w<words.length; w++) { // loop through each word in phrase
			// transform each word to pig latin
			String word = words[w];
			String pigWord = "";
			String cons = "";
			String root = "";
			for (int i=0; i<word.length(); i++) { // loop through each character in word
				// check if first character is a vowel
				if (word.charAt(0) == 'a' || word.charAt(0) == 'e' || word.charAt(0) == 'i' || word.charAt(0) == 'o' || word.charAt(0) == 'u') {
					root = word; // don't modify string for root
				// check if next character is NOT a vowel
				}else if (word.charAt(i) != 'a' && word.charAt(i) != 'e' && word.charAt(i) != 'i' && word.charAt(i) != 'o' && word.charAt(i) != 'u') {
					cons = cons + word.charAt(i); // create string of consonants before first vowel in word
					root = word.substring(i+1); // root word starts with first vowel
				} else {
					break; // ends loop when first vowel is reached
				}
				pigWord = root + cons + "ay";
			} // end transform individual words
			result = result + " " + pigWord;
			//result = words.length > 1 ? result + " " + pigWord : pigWord; // put together multiple words in phrase
		}
		return result;
	}


}
